@model ChatIndexViewModel
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Direct</h2>
            <ul>
                @foreach (var chat in Model.DirectChats)
                {
                    <li>
                        <a asp-controller="chat" asp-action="direct" asp-route-id="@chat.ChatId">@chat.User.FirstName @chat.User.LastName</a>
                        <p>@if (chat.LastMessage.SenderId == Model.UserId)
                            {
                            <span class="text-muted">You: </span>    
                            }
                            @chat.LastMessage.MessageContent</p>
                        <p>@chat.LastMessage.SendTime</p>
                    </li>
                }
            </ul>
        </div>
        <div class="col-6">
            <h2>Group</h2>
            <ul>
                @foreach (var chat in Model.GroupChats)
                {
                    <li>
                        <a asp-controller="chat" asp-action="group" asp-route-id="@chat.Key.Id">@chat.Key.GroupName</a>
                        <p>
                            @if (chat.Value == null)
                            {
                                <span>No messages here yet</span>
                            }
                            else
                            {
                                if (string.IsNullOrEmpty(chat.Value.SenderName))
                                {
                                    <span class="text-muted">You: </span>
                                }
                                else
                                {
                                    <span class="text-muted">@chat.Value.SenderName </span>
                                }
                                <span>@chat.Value.MessageContent</span>
                                <span>@chat.Value.SendTime</span>
                            }
                        </p>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>