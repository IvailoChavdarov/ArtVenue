@model DiscoverIndexViewModel
@section Heads{
    <link rel="stylesheet" href="~/css/Discover/categories.css" asp-append-version="true" />
}
@{
    ViewData["Title"] = "Discover";
}
<div class="categories-container">
    @foreach(Category category in Model.Categories){
          <div class="category-card" style="background-image:url('@category.CategoryImage')">
            <a asp-controller="posts" asp-action="category" asp-route-id="@category.Id" class="card-link">Linkasdasdasd</a>

            @if (category.UserIsInterested)
            {
                <form asp-action="ChangeInterest" asp-route-controllerName="discover" asp-route-actionName="index" asp-route-id="@category.Id">
                    <input type="submit" class="button remove-interest" value="Remove interest">
                </form>
            }
            else
            {
                <form asp-action="ChangeInterest" asp-route-controllerName="discover" asp-route-actionName="index" asp-route-id="@category.Id">
                    <input type="submit" class="button add-interest" value="Add interest">
                </form>
            }
            <div class="content">
                <h2>@category.CategoryName</h2>
                <p>@category.CategoryDescription</p>
            </div>
          </div>
    }
</div>