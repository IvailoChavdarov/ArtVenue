@model ArtVenue.Models.Group

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <h1>Edit</h1>
    <h4>Group</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="UpdateGroup">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="GroupName" class="control-label"></label>
                    <input asp-for="GroupName" class="form-control" />
                    <span asp-validation-for="GroupName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsPrivate" /> Private group
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="GroupPicture" class="control-label"></label>
                    <input asp-for="GroupPicture" class="form-control" />
                    <span asp-validation-for="GroupPicture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GroupBackground" class="control-label"></label>
                    <input asp-for="GroupBackground" class="form-control" />
                    <span asp-validation-for="GroupBackground" class="text-danger"></span>
                </div>
                <input asp-for="CreatorId" value="@Model.CreatorId" type="hidden">
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="index">Back to your groups</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
