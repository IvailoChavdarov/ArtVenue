@model GroupsMembersViewModel
@section Heads{
    <link rel="stylesheet" href="~/css/moderation/moderation.css" asp-append-version="true" />
}
@{
    ViewData["Title"] = Model.GroupName + " members";
}

<div class="container">
    <h1>@Model.GroupName members</h1>
    <hr />
    <div class="row table-heading">
        <div class="col-6">Member</div>
        <div class="col-4">Join date</div>
        <div class="col-2"></div>
    </div>
    @foreach (var membership in Model.Memberships)
    {
        <div class="row">
            <div class="col-6">
                <a asp-controller="posts" asp-action="users" asp-route-id="@membership.MemberId">@membership.Member.FirstName @membership.Member.LastName</a>
            </div>
            <div class="col-4">@membership.JoinedDate</div>
            <div class="col-2">
                <form asp-action="removemember" asp-route-groupId="@membership.GroupId" asp-route-userId="@membership.MemberId">
                    <input type="submit" value="Remove member" class="btn btn-danger" />
                </form>
            </div>
        </div>
    }
    <div>
        <a asp-action="index">Back to your groups</a>
    </div>
</div>
