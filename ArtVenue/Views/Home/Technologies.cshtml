@{
    ViewData["Title"] = "About";
}
@section Heads{
    <link rel="stylesheet" href="~/css/Home/privacy.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home/technologies.css" asp-append-version="true" />
