@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@section Heads{
    <link rel="stylesheet" href="~/css/Identity/register.css" asp-append-version="true" />
}
<div class="container user-form-container">
<h1>@ViewData["Title"]</h1>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Create a new account.</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email"/>
            <label asp-for="Input.Email"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="First name"/>
            <label asp-for="Input.FirstName"></label>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.ThirdName" class="form-control" aria-required="true" placeholder ="Third name">
            <label asp-for="Input.ThirdName"></label>
            <span asp-validation-for="Input.ThirdName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
            <label asp-for="Input.ConfirmPassword"></label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.ProfileImage" class="form-control" id="profileImageInput" placeholder="Image URL" />
            <label asp-for="Input.ProfileImage"></label>
            <span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
        </div>
        <span> or </span>
        <div class="form-floating" style="height:45px">
            <label for="fileupload" class="custom-file-upload">
                <i class="fas fa-cloud-upload-alt"></i> Upload image
            </label>
            <input type="file" id="fileupload" />
            <span id="imageValidationText" class="text-danger"></span>
        </div>
        <div class="checkbox-container-sm">
            <label asp-for="Input.IsPublic" class="form-label">
                <input class="form-check-input" asp-for="Input.IsPublic" checked />
                Public account
            </label>
            <span asp-validation-for="Input.IsPublic" class="text-danger"></span>
        </div>
        <div style="font-size:0">
            <button id="registerButton" class="w-50 btn btn-lg btn-primary bg-success">Register</button>
            <button id="resetFormButton" class="NoLoader w-50 btn btn-lg btn-primary bg-danger" type="reset">Reset</button>
            <button type="submit" id="submitButtonHidden" style="visibility:hidden">Register hidden</button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/register.js"></script>
}
