@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@section Heads{
    <link rel="stylesheet" href="~/css/Identity/user.css" asp-append-version="true" />
}
<header class="user-header">
    <div class="user-cover-container">
        @if (!string.IsNullOrEmpty(Model.ProfileBackground))
        {
            <img src="@Model.ProfileBackground" />
        }
    </div>
    <div class="profile-name-container">
        <img src="@Model.ProfileImage" height="200" width="200" />
    </div>
</header>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="user-options-form-container">
    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.FirstName" class="form-control" />
            <label asp-for="Input.FirstName" class="form-label"></label>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.LastName" class="form-control" />
            <label asp-for="Input.LastName" class="form-label"></label>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <label asp-for="Input.PhoneNumber" class="form-label"></label>
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Bio" class="form-control" />
            <label asp-for="Input.Bio" class="form-label"></label>
            <span asp-validation-for="Input.Bio" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.ArtType" class="form-control" />
            <label asp-for="Input.ArtType" class="form-label"></label>
            <span asp-validation-for="Input.ArtType" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.OutsideLink" class="form-control" />
            <label asp-for="Input.OutsideLink" class="form-label"></label>
            <span asp-validation-for="Input.OutsideLink" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.ProfileImage" class="form-control" id="profileImageInput" placeholder="Image URL" />
            <label asp-for="Input.ProfileImage"></label>
            <span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
        </div>
        <div class="form-floating" style="height:50px">
            <span> or </span>
            <label for="fileupload" class="custom-file-upload">
                <i class="fas fa-cloud-upload-alt"></i> Upload image
            </label>
            <input type="file" id="fileupload" />
            <span id="imageValidationText" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.ProfileBackground" class="form-control" id="profileBackgroundInput" placeholder="Image URL" />
            <label asp-for="Input.ProfileBackground"></label>
            <span asp-validation-for="Input.ProfileBackground" class="text-danger"></span>
        </div>
        <div class="form-floating" style="height:50px">
            <span> or </span>
            <label for="backgroundUpload" class="custom-file-upload">
                <i class="fas fa-cloud-upload-alt"></i> Upload image
            </label>
            <input type="file" id="backgroundUpload" />
            <span id="backgroundValidationText" class="text-danger"></span>
        </div>
        <button id="update-profile-button" type="button" class="w-100 btn btn-lg btn-mainColor">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/changePictures.js"></script>
}
